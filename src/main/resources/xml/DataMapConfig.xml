                  <DataItem no="6" fieldDesc="申请时间" field="applyDate" column="orderbegintime" type="4" optional="true" srcFormat="yyyy/MM/dd HH:mm:ss" format="yyyy-MM-dd'T'HH:mm:ss"/>
