<?xml version="1.0" encoding="UTF-8"?>
<!-- https://logback.qos.ch/manual/index.html -->
<configuration>

    <property name="LOG_PATTERN_CONSOLE"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger{32}:%line] - %msg%n"/>
    <property name="LOG_PATTERN_FILE"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5level] [%thread] [%logger{64}:%line] - %msg%n"/>
    <property name="CHARSET" value="UTF-8"/>
    <property name="LOG_HOME" value="logs"/>
    <property name="LOG_NAME" value="app"/>

    <appender name="C" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN_CONSOLE}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <appender name="RF" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_HOME}/${LOG_NAME}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/${LOG_NAME}-%d{yyyyMMdd}-%i.log</FileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN_FILE}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>

    <appender name="BIZ1" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_HOME}/biz1.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/biz1-%d{yyyyMMdd}-%i.log</FileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN_FILE}</pattern>
            <charset>${CHARSET}</charset>
        </encoder>
    </appender>


    <logger name="biz1Log" level="INFO" additivity="false">
        <appender-ref ref="BIZ1"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="C"/>
        <appender-ref ref="RF"/>
        <!--<appender-ref ref="ARF" />-->
    </root>

</configuration>